<Window x:Class="JboxWebdav.WpfApp.Views.InstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JboxWebdav.WpfApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="安装 - JboxWebdav - v1.0" WindowStartupLocation="CenterScreen"
        Width="609" Height="472" Loaded="Window_Loaded"
        mc:Ignorable="d" Icon="/Resources/jbox.ico">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <materialDesign:PackIcon x:Name="icon"
                                     Width="58" Height="58"
                                     HorizontalAlignment="Center"
                                     Kind="Wrench" />
            <TextBlock x:Name="textstate"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Text="安装中..."
                       FontSize="48" FontFamily="Microsoft YaHei UI Light" />
            <ProgressBar x:Name="progressbar1"
                         Height="10"
                         Margin="0,20,0,0"
                         IsIndeterminate="True" />
            <TextBlock HorizontalAlignment="Center"
                       TextWrapping="Wrap" Margin="0,20,0,0"
                       Text="{Binding Info}"
                       FontSize="20" FontFamily="Microsoft YaHei UI Light" />
            <TextBlock HorizontalAlignment="Center"
                       TextWrapping="Wrap" Margin="0,20,0,0"
                       Foreground="Red"
                       Text="{Binding Message}"
                       FontSize="20" FontFamily="Microsoft YaHei UI Light" />
            <Button x:Name="buttonclose"
                    Width="200" Height="50"
                    Margin="0,20,0,0"
                    Content="关闭程序"
                    Visibility="Collapsed" Click="buttonclose_Click"
                    FontSize="24" />
        </StackPanel>
    </Grid>
</Window>
